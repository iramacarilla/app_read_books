    "components": {
        "schemas": {
            "RegistrationRequest": {
                "type": "object",
                "required": ["username", "email", "password"],
                "properties": {
                    "username": {
                        "type": "string",
                        "description": "User's name",
                        "example": "User"
                    },
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "format": "email"
                    },
                    "password": {
                        "type": "string",
                        "description": "User's password",
                        "example": "qwerty123"
                    }
                }
            },
            "RegistrationResponse": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "description": "User's name",
                        "example": "User"
                    },
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "format": "email"
                    }
                }
            },
            "LoginRequest": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "format": "email"
                    },
                    "password": {
                        "type": "string",
                        "description": "User's password",
                        "example": "qwerty123"
                    }
                }
            },
            "LoginResponse": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
                        "description": "User's token",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYwODAxZDk5MTkyOGE0ODM2NGY2ODdkMiIsImlhdCI6MTYxOTAwOTI2NywiZXhwIjoxNjIxNjAxMjY3fQ.LPz3owBfisJKIbdU-q9vjt7sGSFDSw_Otd9zSnBRuvU"
                    },
                    "user": {
                        "type": "object",
                        "description": "Information about user",
                        "properties": {
                            "username": {
                                "type": "string",
                                "description": "User's name",
                                "example": "User"
                            },
                            "email": {
                                "type": "string",
                                "description": "User's email",
                                "example": "user@example.com"
                            },
                            "books": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "description": "Book's id",
                                    "example": "608170ac715ef491300d3d2e"
                                }
                            },
                            "training": {
                                "type": "string",
                                "description": "Training's id",
                                "example": "608170fb715ef491300d3d2f"
                            }
                        }
                    }
                }
            },
            "AddingBookRequest": {
                "required": ["title", "numberOfPages"],
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Book's title",
                        "example": "Harry Potter"
                    },
                    "author": {
                        "type": "string",
                        "description": "Book's author",
                        "example": "J. K. Rowling"
                    },
                    "year": {
                        "type": "number",
                        "description": "Book's year",
                        "example": "1997"
                    },
                    "numberOfPages": {
                        "type": "number",
                        "description": "Number of pages in a book",
                        "example": "123"
                    }
                }
            },
            "AddingBookResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Book's id",
                        "example": "07ef3f4358b773378699381"
                    },
                    "title": {
                        "type": "string",
                        "description": "Book's title",
                        "example": "Harry Porter"
                    },
                    "author": {
                        "type": "string",
                        "description": "Book's author",
                        "example": "J. K. Rowling"
                    },
                    "year": {
                        "type": "integer",
                        "description": "Book's year",
                        "example": "1997"
                    },
                    "numberOfPages": {
                        "type": "integer",
                        "description": "Number of pages in a book",
                        "example": "123"
                    },
                    "review": {
                        "type": "string",
                        "description": "rewiew",
                        "example": ""
                    },
                    "rating": {
                        "type": "integer",
                        "description": "rating",
                        "minimum": 0,
                        "maximum": 5,
                        "example": null
                    }
                }
            },
            "PatchBookRequest": {
                "required": [],
                "type": "object",
                "properties": {
                    "review": {
                        "type": "string",
                        "description": "Book's review",
                        "example": "Harry Potter is a good book"
                    },
                    "rating": {
                        "type": "integer",
                        "description": "Book's rating",
                        "example": "4"
                    }
                }
            },
            "PatchBookResponse": {
                "required": [],
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Book's id",
                        "example": "608170ac715ef491300d3d2e"
