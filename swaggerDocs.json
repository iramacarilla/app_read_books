                    "401": {
                        "description": "Unauthorized (invalid access token)",
                        "content": {}
                    },
                    "404": {
                        "description": "Invalid user / Invalid session",
                        "content": {}
                    }
                }
            },
            "patch": {
                "tags": ["Training"],
                "summary": "Add read pages",
                "security": [
